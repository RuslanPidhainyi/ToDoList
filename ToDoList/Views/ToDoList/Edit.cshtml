@model ToDoList.Models.TableForEdit


<div class="container">
    <h4>Edit</h4>
    <hr />
    <div class="row">
        <div class="col-md-4">
            <form asp-controller="ToDoList" asp-action="Edit" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="form-group">
                    <label asp-for="Text">Text</label>
                    <div>
                        <span asp-validation-for="Text" class="text-danger"></span>
                    </div>
                    <input asp-for="Text" type="text" value=@ViewBag.Text class="form-control" placeholder="Text" />
                </div>
                <div class="form-group">
                    <br />  
                    <input asp-for="Id" value=@ViewBag.Id class="form-control" hidden />
                    <button type="submit" class="btn btn-success"> Accept </button>
                </div>
            </form>
        </div>
    </div>
</div>