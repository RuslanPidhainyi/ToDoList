@{
}

<div class="container">
    <h4>Add a new task</h4>
    <hr />
    <div class="row">
        <div class="col-md-4">
            <form asp-controller="ToDoList" asp-action="Add" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="form-group">
                    <label asp-for="Text">Task</label>
                        <div>
                            <span asp-validation-for="Text" class="text-danger"></span>
                        </div>
                    <input asp-for="Text" type="text" class="form-control" placeholder="Text" />
                </div>
                <div class="form-group">
                    <br />
                    <button type="submit" class="btn btn-success"> Add </button>
                </div>
            </form>
        </div>
    </div>
</div>



